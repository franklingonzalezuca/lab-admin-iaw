@model IEnumerable<Laboratorio.Models.opcion>

@{
    ViewBag.Title = "Todos los elementos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Todos los elementos</h2>

<p>
    @Html.ActionLink("Crear nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nombre
        </th>
        <th>
            Descripcion
        </th>
        <th>
            Estado
        </th>
        <th>Acciones</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nombreOpcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcionOpcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.estadoOpcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.idOpcion }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.idOpcion }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.idOpcion })
        </td>
    </tr>
}

</table>
