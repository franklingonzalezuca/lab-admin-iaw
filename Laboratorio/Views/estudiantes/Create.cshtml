                @Html.ValidationMessageFor(model => model.apellidoEstudiante, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.idGenero, "idGenero", htmlAttributes: new { @class = "control-label col-md-2" })
